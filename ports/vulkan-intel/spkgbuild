# description: Vulkan-intel Mesa

name=vulkan-intel
version=20.3.4
release=1
source="https://www.x.org/pub/individual/driver/$name-$version.tar.bz2"

build() {
	cd $name-$version
	./configure --prefix=/usr --sysconfdir=/etc \
		--localstatedir=/var --disable-static
	make
	make DESTDIR=$PKG install
}
