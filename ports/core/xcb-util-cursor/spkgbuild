# description	: XCB cursor library
# depends	: xcb-util-renderutil libxcb xcb-util-image 

name=xcb-util-cursor
version=0.1.3
release=1
source="https://xorg.freedesktop.org/archive/individual/xcb/xcb-util-cursor-$version.tar.bz2"

build() {
	cd $name-$version

  	./configure \
		--prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--disable-static
	make
	make DESTDIR=$PKG install
}

