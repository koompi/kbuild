# description	: Implementation of fts for musl libc
# homepage	: http://github.com/pullmoll/musl-fts

name=git
version=2.30.1
release=1
source="https://www.kernel.org/pub/software/scm/$name/$name-$version.tar.xz"

build() {
	if [ "$BOOTSTRAP" ]; then
		flags="--host=$TARGET --build=$HOST"
	fi

	cd $name-$version

	make \
		prefix=/usr \
		gitexecdir=/usr/lib/git-core \
		perllibdir="$(/usr/bin/perl -MConfig -wle 'print $Config{installvendorlib}')" \
		DESTDIR=$PKG install

	mkdir -p $PKG/usr/share/git/
	install -m644 ./contrib/completion/git-prompt.sh $PKG/usr/share/git/git-prompt.sh

	rm -r $PKG/usr/share/locale


}
