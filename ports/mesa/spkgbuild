# description	: OpenGL compatible 3D graphics library
# depends	: python3-mako llvm elfutils bison flex libxext libxdamage libxshmfence libxxf86vm libxrandr libdrm libglvnd

name=mesa
version=20.3.4
release=1
source="https://mesa.freedesktop.org/archive/$name-$version.tar.xz
	wordsize.h
	glx-tls.patch
	0001-musl.patch"


build() {
	cd $name-$version

	mkdir -pv include/bits
	cp $SRC/wordsize.h include/bits/

	patch -Np1 -i "$SRC"/glx-tls.patch
	patch -Np1 -i "$SRC"/0001-musl.patch


	python3 bin/git_sha1_gen.py --output include/git_sha1.h

	mkdir build
	cd    build
	
	#meson --prefix=/usr \
	#      --sysconfdir=/etc \
	#      -Dvalgrind=false \
	#      -Dglx=dri \
	#      -Degl=true \
	#      -Dosmesa=gallium \
	#      -Dgallium-nine=true \
	#      -Dplatforms=x11 \
	#      -Dglvnd=true \
	#      -Dllvm=true \
	#      -Dgallium-drivers=r300,r600,svga,swrast,radeonsi,nouveau \
	#      -Dvulkan-drivers=amd,intel \
	#      -Ddri-drivers=i915,i965,nouveau \
	#      ..
	meson --prefix=/usr \
	      --sysconfdir=/etc \
	      -Dvalgrind=disabled \
	      -Dglx=dri \
	      -Degl=enabled \
	      -Delf-use-tls=false \
	      -Dgbm=enabled \
	      -Dgles1=enabled \
	      -Dgles2=enabled \
	      -Dosmesa=gallium \
	      -Dgallium-nine=true \
	      -Dplatforms=x11 \
	      -Dglvnd=true \
	      -Dllvm=enabled \
	      -Dlmsensors=enabled \
	      -Dplatforms=x11,wayland \
	      -Dshared-glappi=enabled \
	      -Dgallium-drivers=r300,r600,svga,swrast,radeonsi,nouveau \
	      -Dvulkan-drivers=amd,intel \
	      -Ddri-drivers=i915,i965,nouveau \
	      ..
	ninja
	DESTDIR=$PKG ninja install

	# indirect rendering symlink
	ln -s libGLX_mesa.so.0 $PKG/usr/lib/libGLX_indirect.so.0
}
